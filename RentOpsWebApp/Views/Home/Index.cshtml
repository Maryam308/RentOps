@using RentOpsWebApp.ViewModels
@model HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<style>
    html {
        scroll-behavior: smooth;
    }

    .custom-btn {
        width: 500px; /* Equal width for both */
        padding: 12px 0; /* Vertical padding */
        font-size: 1.2rem; /* Larger font */
        border-radius: 0.4rem; /* Slight rounding */
        height: 200px;
    }

    .mr-5 {
        margin-right: 2rem; /* Space between buttons */
    }

    .home-header {
        background-color: #e8f5f9; /* Light blue shade */
        padding: 2rem;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

        .home-header h2 {
            color: #2c3e50;
            font-weight: bold;
        }

        .home-header p {
            color: #4f5d73;
            margin-top: 0.5rem;
        }

    .hero-slider {
        position: relative;
        height: 400px;
        width: 100%;
        overflow: hidden;
    }

        .hero-slider .carousel-inner,
        .hero-slider .carousel-item {
            height: 100%;
            width: 100%;
        }

        .hero-slider .carousel-item {
            background-size: cover;
            background-position: center;
            position: relative;
        }

            .hero-slider .carousel-item::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.4);
            }

        .hero-slider .carousel-caption {
            position: absolute;
            top: 50%;
            left: 10%;
            right: 10%;
            transform: translateY(-50%);
            text-align: left;
            z-index: 2;
        }

        .hero-slider h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #fff;
        }

        .hero-slider p {
            font-size: 1.1rem;
            color: #ddd;
            margin-top: 1rem;
        }

        .hero-slider .btn-primary {
            background-color: #00bcd4;
            border: none;
            padding: 0.75rem 1.5rem;
            margin-top: 1.5rem;
            font-size: 1rem;
        }

    .carousel-indicators li {
        background-color: #00bcd4;
    }

    .carousel-indicators {
        bottom: 10px;
    }
</style>


<div id="heroCarousel" class="carousel slide hero-slider my-4" data-ride="carousel" >
    <ol class="carousel-indicators">
        <li data-target="#heroCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#heroCarousel" data-slide-to="1"></li>
        <li data-target="#heroCarousel" data-slide-to="2"></li>
        <li data-target="#heroCarousel" data-slide-to="3"></li>
        <li data-target="#heroCarousel" data-slide-to="4"></li>
        <li data-target="#heroCarousel" data-slide-to="5"></li>
    </ol>

    <div class="carousel-inner">
        <div class="carousel-item active" style="background-image: url('@Url.Content("~/images/heavy_machinery.jpg")');">
            <div class="carousel-caption">
                <h1 style="padding-left: 40px;">HEAVY MACHINERY<br>WITH TOP QUALITY PERFORMANCE</h1>
                <p style="padding-left: 40px;">Bulldozers, Excavators, and more heavy-duty tools for large projects.</p>
                <a asp-controller="Equipment" asp-action="Equipment" class="btn btn-primary" style="margin-left: 40px;">Rent Now</a>


            </div>
        </div>
        <div class="carousel-item" style="background-image: url('@Url.Content("~/images/power_tools.jpg")');">
            <div class="carousel-caption">
                <h1 style="padding-left: 40px;">POWER TOOLS<br>FOR EVERY PROJECT</h1>
                <p style="padding-left: 40px;">High-powered drills, saws, and tools for precision work.</p>
                <a asp-controller="Equipment" asp-action="Equipment" class="btn btn-primary" style="margin-left: 40px;">Check Equipment</a>
            </div>
        </div>
        <div class="carousel-item" style="background-image: url('@Url.Content("~/images/concrete_equipment.jpeg")');">
            <div class="carousel-caption">
                <h1 style="padding-left: 40px;">CONCRETE EQUIPMENT<br>BUILT FOR DURABILITY</h1>
                <p style="padding-left: 40px;">Mixers, pumps, and tools to handle all your concrete work with ease.</p>
                <a asp-controller="Equipment" asp-action="Equipment" class="btn btn-primary" style="margin-left: 40px;">Explore Prices</a>
            </div>
        </div>
        <div class="carousel-item" style="background-image: url('@Url.Content("~/images/ladders_and_scaffolding.jpg")');">
            <div class="carousel-caption">
                <h1 style="padding-left: 40px;">LADDERS & SCAFFOLDING<br>SAFE AND RELIABLE ACCESS</h1>
                <p style="padding-left: 40px;">High-quality ladders and scaffolding systems for all your elevation needs.</p>
                <a asp-controller="Equipment" asp-action="Equipment" class="btn btn-primary" style="margin-left: 40px;">View Options</a>
            </div>
        </div>
        <div class="carousel-item" style="background-image: url('@Url.Content("~/images/safety_tools.jpg")');">
            <div class="carousel-caption">
                <h1 style="padding-left: 40px;">SAFETY TOOLS<br>FOR YOUR PROTECTION</h1>
                <p style="padding-left: 40px;">Helmets, gloves, harnesses, and all essential safety equipment for your site.</p>
                <a asp-controller="Equipment" asp-action="Equipment" class="btn btn-primary" style="margin-left: 40px;">Browse Safety Gear</a>
            </div>
        </div>
        <div class="carousel-item" style="background-image: url('@Url.Content("~/images/surveying_instruments.jpg")');">
            <div class="carousel-caption">
                <h1 style="padding-left: 40px;">SURVEYING INSTRUMENTS<br>PRECISION MEASUREMENT SOLUTIONS</h1>
                <p style="padding-left: 40px;">Levels, theodolites, and tools for accurate land and construction surveying.</p>
                <a asp-controller="Equipment" asp-action="Equipment" class="btn btn-primary" style="margin-left: 40px;">Get A Quote</a>
            </div>
        </div>
    </div>

    <a class="carousel-control-prev" href="#heroCarousel" role="button" data-slide="prev" style="margin-top: 0px ;">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </a>
    <a class="carousel-control-next" href="#heroCarousel" role="button" data-slide="next" style="margin-top: 0px ;">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </a>
</div>

<div class="overview-header" style="padding-top: 2rem;">
    <h2>Welcome to RentOps</h2>
    <p style="color: grey;">Your best solution for equipment rentals</p>
</div>

<div class="container mt-4 overview-content" style="padding-top: 2rem;">
    <section id="system-overview" style="padding-top: 2rem;">
        <h5>About the System</h5>
        <p>The Equipment Rental Management System provides a comprehensive solution for managing rental operations. It enables easy rental inventory management, seamless processing of rental requests, and efficient tracking of active rentals and returns. Additionally, the system supports customer feedback collection to enhance service quality and ensure customer satisfaction.</p>
    </section>

    <section id="key-functions" style="padding-top: 2rem;">
        <h5>Key Functions</h5>
        <ul>
            <li>Manage and update rental inventory in real-time.</li>
            <li>Process rental requests from customers efficiently.</li>
            <li>Track ongoing rentals and manage return schedules.</li>
            <li>Collect and analyze customer feedback for service improvement.</li>
            <li>Provide Equipment with top quality.</li>
        </ul>
    </section>
</div>

<div class="container mt-5">
    <h2 class="mb-4" style="color: #2c3e50;">Our Statistics</h2>
    <div class="row text-center">
        <div class="col-md-3 mb-4">
            <div class="card border-info">
                <div class="card-header">Total Customers</div>
                <div class="card-body">
                    <h4 class="card-title">@Model.TotalCustomers</h4> <!-- Replace with query -->
                    <p class="card-text">Registered customers using our services.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-info">
                <div class="card-header">Total Employees</div>
                <div class="card-body">
                    <h4 class="card-title">@Model.TotalEmployees</h4> <!-- Replace with query -->
                    <p class="card-text">Dedicated employees supporting operations.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-info">
                <div class="card-header">Total Rentals</div>
                <div class="card-body">
                    <h4 class="card-title">@Model.TotalRentals</h4> <!-- Replace with query -->
                    <p class="card-text">Completed equipment rental transactions.</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-info">
                <div class="card-header">Total Equipment</div>
                <div class="card-body">
                    <h4 class="card-title">@Model.TotalEquipments</h4> <!-- Replace with query -->
                    <p class="card-text">Available equipment across all categories.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="d-flex justify-content-center mb-4">
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success btn-lg mr-5" style="height: 60px; width:250px; line-height:38px;">Register</a>
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg" style="height: 60px; width:250px; line-height:38px;">Login</a>
    </div>
</div>



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
}